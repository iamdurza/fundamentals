#!/usr/bin/env python3

import skilstak.colors as c


def print_colored(word):
    for char in word:
      print(c.rc() + char +c.x)

def hello():
    '''Print hello world to the console with each charecter in random colors.'''

    try:
        print(c.clear)
        while True:
           #     old code   ------->   print(c.rc() + "Hello " + c.rc() + "World" + c.x)
           print_colored("Hello World!")
    except KeyboardInterrupt:
        exit()

