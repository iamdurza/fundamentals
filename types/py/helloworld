#!/usr/bin/env python3

import skilstak.colors as c


def print_colored(word):
    for char in word:
      print(c.rc() + char +c.x)
                            #^ , end=''
def colored_hello():
    '''Print hello world to the console with each charecter in random colors.'''

    try:
        print(c.clear)
        while True:
           #     old code   ------->   print(c.rc() + "Hello " + c.rc() + "World" + c.x)
           print_colored("Hello World!")
    except KeyboardInterrupt:
        exit()

if __name__ == '__main__':    
    import sys 
    if len(sys.argv) > 1 and sys.argv[1].startswith("c"):
        colored_hello()
    else:
        pass


#                                    |
#                                   \_/
#-------->       U MUST WRITE 'helloworld c' FOR DIS TO WORK!!!!   <------------
